<Page
    x:Class="NearShare.Windows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NearShare.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:community="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:NearShare.Windows.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="16" Spacing="{StaticResource SettingsCardSpacing}">

            <!-- ToDo: Rive player -->
            <!--<rive:RivePlayer Width="300"
                Height="300"
                HorizontalAlignment="Center"
                DrawInBackground="True"
                Source="ms-appx:///Assets/animation-welcome.riv" />-->

            <CommandBar Background="Transparent" DefaultLabelPosition="Right" HorizontalAlignment="Center">
                <AppBarButton Icon="Document" Label="Send File" x:Name="SendFileButton" Click="SendFileButton_Click" />
                <AppBarButton Icon="Paste" Label="Send Clipboard" x:Name="SendClipBoardButton" Click="SendClipBoardButton_Click" />
                <AppBarButton Icon="Edit" Label="Send Text" x:Name="SendTextButton" Click="SendTextButton_Click" />
            </CommandBar>

            <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Settings" />

            <community:SettingsCard Header="Configure Nearby Sharing">
                <community:SettingsCard.Description>
                    <HyperlinkButton Content="Learn more about the Windows implementation" NavigateUri="https://support.microsoft.com/en-us/windows/0efbfe40-e3e2-581b-13f4-1a0e9936c2d9" />
                </community:SettingsCard.Description>
                <Button Content="Open Windows Settings" x:Name="OpenSettingsButton" Click="OpenSettingsButton_Click" />
            </community:SettingsCard>

            <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="About" />

            <community:SettingsCard 
                HeaderIcon="{ui:FontIcon Glyph=&#xE774;}"
                Header="Nearby Sharing Website"
                Description="Open the Nearby Sharing website"
                ActionIcon="{ui:FontIcon Glyph=&#xE8A7;}"
                ActionIconToolTip="Open in new window"
                IsClickEnabled="True"
                x:Name="AboutSettingsCard"
                Click="AboutSettingsCard_Click" />

            <community:SettingsCard
                Header="GitHub"
                Description="Open the GitHub repository"
                ActionIcon="{ui:FontIcon Glyph=&#xE8A7;}"
                ActionIconToolTip="Open in new window"
                IsClickEnabled="True"
                x:Name="GitHubSettingsCard"
                Click="GitHubSettingsCard_Click">
                <community:SettingsCard.HeaderIcon>
                    <controls:StrokePathIcon Data="M9 19c-4.3 1.4-4.3-2.5-6-3m12 5v-3.5c0-1 .1-1.4-.5-2c2.8-.3 5.5-1.4 5.5-6a4.6 4.6 0 0 0-1.3-3.2a4.2 4.2 0 0 0-.1-3.2s-1.1-.3-3.5 1.3a12.3 12.3 0 0 0-6.2 0C6.5 2.8 5.4 3.1 5.4 3.1a4.2 4.2 0 0 0-.1 3.2A4.6 4.6 0 0 0 4 9.5c0 4.6 2.7 5.7 5.5 6c-.6.6-.6 1.2-.5 2V21" />
                </community:SettingsCard.HeaderIcon>
            </community:SettingsCard>

        </StackPanel>
    </ScrollViewer>
</Page>
